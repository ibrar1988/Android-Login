<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tarunsoft.loginhandler" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.tarunsoft.offerdunia.Handler.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Login"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tarunsoft.offerdunia.ActivityLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tarunsoft.offerdunia.activity_signup"
            android:label="@string/title_activity_activity_signup"
            android:parentActivityName="com.tarunsoft.offerdunia.activity_signup" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarunsoft.offerdunia.ActivityLogin" />
        </activity>
        <activity
            android:name="com.tarunsoft.offerdunia.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.tarunsoft.offerdunia.ActivityLogin" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarunsoft.offerdunia.ActivityLogin" />
        </activity>
    </application>

</manifest>
